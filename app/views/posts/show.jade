extends ../layouts/default

block content
    h1 #{header}
    form.signin.form-horizontal(action="/posts/edit", method="post")
        .control-group
            label.control-label(for='address') Title
            .controls
                input#title(type='text', name="title",required='required', value=postTitle)
        .control-group
            label.control-label(for='address') Content
            .controls
                #epiceditor
        .control-group
            .controls
                input(type='text', name='content', value=postContent)
        .form-actions
            input.btn.btn-primary(type='submit') Submit
            &nbsp;
            | or&nbsp;
            a.show-login(href="/") Back