extends ../layouts/default

block content
    h1 #{header}

    form.signin.form-horizontal(action="/posts/create", method="post")
        .control-group
            label.control-label(for='title') Title
            .controls
                input#title(type='text', name="title",required='required', value=postTitle)

        .control-group
            label.control-label(for='content') Content
            .controls
                #epiceditor
        .control-group(style='display:none')
            .controls
                textarea#epictextarea(name='content', value=postContent)
        .control-group(style='display:none')
            .controls
                input#contentRec(type='text')
        .form-actions
            input.btn.btn-primary(type='submit') Submit
            &nbsp;
            | or&nbsp;
            a.show-login(href="/posts/list") Back